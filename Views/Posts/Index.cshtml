@model Anspeamiaincercareplusunu.Models.Post
@{
    ViewBag.Title = "Index";
}

<h2>Postări</h2>

@if (TempData.ContainsKey("message"))
{
    <h3 class="alert alert-info" role="alert">@ViewBag.Message</h3>
}

@foreach (Anspeamiaincercareplusunu.Models.Post post in ViewBag.Posts)
{
<div class="panel panel-article">
    <div class="panel-header">
        <p>@post.Title</p>
    </div>
    <div class=" panel-article">
        <p>@post.Content</p>
    </div>
    <div class="panel-footer">
        <a class="btn btn-sm btn-success full-width" href="/Posts/Show/@post.Id">Afisare Post</a>
    </div>
</div>
    <br />
}

<div>
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li>
                <a href="/Posts/Index?page=1" aria-label="Previous">
                    <span aria-hiden="true">&laquo</span>
                </a>
            </li>

            @for (int i = 1; i <= ViewBag.lastPage; i++)
            {
                <li><a href="/Posts/Index?page=@i">@(i)</a></li>
            }

            <li>
                <a href="/Posts/Index?page=@(ViewBag.lastPage)" aria-label="Next>
                    <span aria-hidden="true">&raquo;</span>
</li>
        </ul>
    </nav>
</div>

