@model Anspeamiaincercareplusunu.Models.Post



<h2>Editare Postare</h2>
@using (Html.BeginForm(actionName: "Edit", controllerName: "Posts", routeValues: new { id = Model.Id }))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    <br />
    @Html.Label("Title", "Titlu Postare")
    <br />
    @Html.Editor("Title")
    <br />
    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("Content", "Continut Postare")
    <br />
    @Html.Editor("Content", new { htmlAttributes = new { @class = "form-control summernote" } })
    <br />
    @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
    <br />
    <br />

    <label>Selectati Forumul</label>
    @Html.DropDownListFor(m => m.ForumId,
        new SelectList(Model.Form, "Value", "Text"),
        "Selectati forumul", new { @class = "form-control" })

    @Html.ValidationMessageFor(m => m.ForumId, "", new { @class = "text-danger" })
    <br />
    <br />
    <button class="btn btn-sm btn-success" type="submit">Modifica postarea</button>
}

