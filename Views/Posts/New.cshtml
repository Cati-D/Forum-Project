@model Anspeamiaincercareplusunu.Models.Post
@{
    ViewBag.Title = "New";
}

<h2>Adaugare Postare</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Posts"))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    @Html.Label("Title", "Titlu Postare")
    <br />
    @Html.TextBox("Title", null, new { @class = "form-control" })

    @Html.ValidationMessageFor(m => m.Title, null, new { @class = "text-danger" })
    <br />
    <br />

    @Html.Label("Content", "Continut Postare")
    <br />
    @Html.TextArea("Content", null, new { @class = "form-control summernote" })
    @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
    <br />
    <br />

    <label>Selectati Forumul</label>
    @Html.DropDownListFor(m => m.ForumId, new SelectList(Model.Form, "Value", "Text"),
    "Selectati Forumul", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.ForumId, "", new { @class = "text-danger" })
    <br />
    <br />
    <button class="btn btn-sm btn-success" type="submit">Adauga postare</button>

}

